@model Yarışma.Areas.Management.Models.DashboardVM

<div class="page-wrapper">
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="row">
                <div class="col-12 col-lg-12 col-xl-12 d-flex">
                    <div class="card radius-15 w-100">
                        <div class="card-body">
                            <div class="row row-cols-1 row-cols-md-3 g-3">
                                <div class="col">
                                    <div class="card radius-15 mb-0 shadow-none border">
                                        <div class="card-body text-center">
                                            <div class="widgets-icons mx-auto rounded-circle bg-info text-white">
                                                <i class="bx bx-time"></i>
                                            </div>
                                            <h4 class="mb-0 font-weight-bold mt-3">0</h4>
                                            <p class="mb-0">Kalan Süre</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card radius-15 mb-0 shadow-none border">
                                        <div class="card-body text-center">
                                            <div class="widgets-icons mx-auto bg-wall text-white rounded-circle">
                                                <i class="bx bx-bookmark-alt"></i>
                                            </div>
                                            <h4 class="mb-0 font-weight-bold mt-3">@Model.ContestantCount</h4>
                                            <p class="mb-0">Toplam Yarışmacı</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card radius-15 mb-0 shadow-none border">
                                        <div class="card-body text-center">
                                            <div class="widgets-icons mx-auto bg-rose rounded-circle text-white">
                                                <i class="bx bx-bulb"></i>
                                            </div>
                                            <h4 class="mb-0 font-weight-bold mt-3">@Model.JudgeCount</h4>
                                            <p class="mb-0">Toplam Hakem</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card radius-15 mb-0 shadow-none border">
                                        <div class="card-body text-center">
                                            <div class="widgets-icons mx-auto rounded-circle bg-danger text-white">
                                                <i class="bx bx-line-chart"></i>
                                            </div>
                                            <h4 class="mb-0 font-weight-bold mt-3">@Model.CategoryCount</h4>
                                            <p class="mb-0">Toplam Kategori</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card radius-15 mb-0 shadow-none border">
                                        <div class="card-body text-center">
                                            <div class="widgets-icons mx-auto bg-primary rounded-circle text-white">
                                                <i class="bx bx-group"></i>
                                            </div>
                                            <h4 class="mb-0 font-weight-bold mt-3">0</h4>
                                            <p class="mb-0">Değerlendirilen</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="card radius-15 mb-0 shadow-none border">
                                        <div class="card-body text-center">
                                            <div class="widgets-icons mx-auto bg-success text-white rounded-circle">
                                                <i class="bx bx-cloud-download"></i>
                                            </div>
                                            <h4 class="mb-0 font-weight-bold mt-3">0</h4>
                                            <p class="mb-0">Değerlendirilmeyen</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 d-flex">
                    <div class="card radius-15 w-100">
                        <div class="card-body">
                            <div class="d-lg-flex align-items-center">
                                <div>
                                    <h5 class="mb-6">Yarışmacı Kategoriler</h5>
                                </div>
                            </div>
                            @if (Model.ProjectCategories != null && Model.ProjectCategories.Any())
                            {
                                foreach (var category in Model.ProjectCategories)
                                {
                                    var projectCount = category.Projects?.Count ?? 0; // Proje sayısını al veya 0
                                    var percentage = Model.ContestantCount > 0 ? (projectCount / (double)Model.ContestantCount * 100) : 0; // Yüzde hesapla

                                    <div class="progress-wrapper mb-4">
                                        <p class="mb-1">
                                            @category.Name <span class="float-end">@projectCount</span>
                                        </p>
                                        <div class="progress radius-15" style="height:5px;">
                                            <div class="progress-bar" role="progressbar" style="width: @(percentage)%;"></div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="progress-wrapper mb-4">
                                    <p class="mb-1">Yarışmacı Kategoriler: <span class="float-end">0</span></p>
                                    <div class="progress radius-15" style="height:5px;">
                                        <div class="progress-bar" role="progressbar" style="width: 0%;"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 d-flex">
                    <div class="card radius-15 w-100">
                        <div class="card-body">
                            <div class="d-lg-flex align-items-center">
                                <div>
                                    <h5 class="mb-6">Hakem Kategoriler</h5>
                                </div>
                            </div>

                            @if (Model.JudgeCategories != null && Model.JudgeCategories.Any())
                            {
                                foreach (var judgeCategory in Model.JudgeCategories)
                                {
                                    var judgeCount = judgeCategory.Judges?.Count() ?? 0; // Hakem sayısını al veya 0

                                    <div class="progress-wrapper mb-4">
                                        <p class="mb-1">
                                            @judgeCategory.Name <span class="float-end">@judgeCount Hakem</span>
                                        </p>
                                        <div class="progress radius-15" style="height:5px;">
                                            <div class="progress-bar" role="progressbar" style="width: @(judgeCount > 0 ? 100 : 0)%"></div> <!-- Eğer 0'dan fazla hakem varsa çubuğun tamamını göster -->
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="progress-wrapper mb-4">
                                    <p class="mb-1">Hakem Kategoriler: <span class="float-end">0 Hakem</span></p>
                                    <div class="progress radius-15" style="height:5px;">
                                        <div class="progress-bar" role="progressbar" style="width: 0%;"></div>
                                    </div>
                                </div>
                            }
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
