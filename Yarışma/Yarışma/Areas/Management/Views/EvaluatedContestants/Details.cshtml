@model Yarışma.Models.ContestantDetailsVM
<div class="page-content-wrapper">
    <div class="page-content">
<div class="container mt-5">
    <!-- Başlık -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-dark">Hakem Yorumları</h2>
        <p class="text-muted">Proje ile ilgili hakemlerin yaptığı değerlendirmeler aşağıda listelenmiştir.</p>
    </div>

    <!-- Hakem Yorumları Liste -->
    @if (Model.JudgeComments.Any())
    {
        <ul class="list-group shadow">
            @foreach (var comment in Model.JudgeComments)
            {
                <li class="list-group-item mb-3 p-4 rounded">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="fw-bold text-primary mb-1">@comment.JudgeName</h5>
                            <p class="text-muted mb-0">@comment.JudgeCategory</p> <!-- Kategori ismin altında ve beyaz -->
                        </div>
                        <span class="badge bg-secondary">@comment.Category</span>
                    </div>
                    <hr>
                    <p><strong>Puan:</strong> @comment.Score</p>
                    <p><strong>Yorum:</strong> @comment.Comments</p>
                </li>
            }
        </ul>
    }
    else
    {
        <div class="alert alert-warning text-center">
            Bu proje için henüz hakem yorumu bulunmamaktadır.
        </div>
    }

    <!-- Geri Dön Butonu -->
    <div class="text-center mt-4">
        <a asp-action="EvaluatedContestants" class="btn btn-outline-dark">
            <i class="bi bi-arrow-left"></i> Geri Dön
        </a>
    </div>
</div>
    </div>
</div>
