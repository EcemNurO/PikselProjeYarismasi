@model Yarışma.Areas.Management.Models.JudgeViewModel

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="row">
            <div class="col-12">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="mb-0">Onay Bekleyen Hakemler</h4>
                    </div>
                    <hr>
                     <div class="dt-buttons btn-group">
                                    <a href="@Url.Action("ExportToExcel", "Judge")" class="btn btn-secondary buttons-excel buttons-html5">
                                        <span>Excel</span>
                                    </a>
                                </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Ad - Soyad</th>
                                    <th>Kategori</th>
                                    <th>Hakem Türü</th>
                                    <th>Onay</th>
                                    <th>#</th>
                                 
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Judges == null || !Model.Judges.Any())
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">Veri Yok</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var judge in Model.Judges)
                                    {
                                        <tr>
                                            <td>@(judge.JudgeProfil?.FullName ?? "Ad Soyad Yok")</td>
                                          
                                            <td>@(judge.JudgeCategory?.Name ?? "Hakem Türü Yok")</td>
                                            <td>@(judge.IsApproved ? "Onaylı" : "Onay Bekliyor")</td>
                                            <td>
                                                @if (!judge.IsApproved)
                                                {
                                                    <form method="post" asp-action="ApproveJudge" asp-route-judgeId="@judge.Id">
                                                        <button type="submit">Onayla</button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                        <div class="pagination">
                            @for (int i = 1; i <= (Model.TotalCount / Model.PageSize) + 1; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a href="#" class="page-link" data-page="@i">@i</a>
                                </li>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        loadContestants(1);

        $(document).on("click", ".pagination a", function (e) {
            e.preventDefault();
            var page = $(this).attr("data-page");
            loadContestants(page);
        });

        function loadContestants(page) {
            $.ajax({
                url: '@Url.Action("GetContestants", "Judge")',
                type: 'GET',
                data: { page: page },
                success: function (result) {
                    $("#contestantTable").html(result); // PartialView'i tabloya yükle
                }
            });
        }
    });
</script>
