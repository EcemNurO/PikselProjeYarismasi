@model Yarışma.Areas.Management.Models.JudgeViewModel

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="row">
            <div class="col-12">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="mb-0">Tüm Hakemler</h4>
                    </div>
                    <hr>
                    <div class="table-responsive">
                        <div id="example2_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div id="contestantTable">
                                <div class="dt-buttons btn-group">
                                    <a href="@Url.Action("ExportToExcel", "Judge")" class="btn btn-secondary buttons-excel buttons-html5">
                                        <span>Excel</span>
                                    </a>
                                </div>
                                <table id="contestantTable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Ad - Soyad</th>
                                            <th>Kategori</th>
                                            <th>Tematik Alan</th>
                                            <th>Türü</th>
                                        
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var judge in Model.Judges)
                                        {
                                            <tr>
                                                <td>@judge.JudgeProfil?.FullName ?? "Ad Soyad Yok"</td>
                                                <td>@judge.ProjectCategory?.Name ?? "Kategori Yok"</td>
                                 
                                                <td>@judge.JudgeCategory.Name ?? "Hakem Türü Yok"</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                                <div class="pagination">
                                    @for (int i = 1; i <= (Model.TotalCount / Model.PageSize) + 1; i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a href="#" class="page-link" data-page="@i">@i</a>
                                        </li>
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // İlk sayfayı yükle
        loadContestants(1);

        // Sayfalama düğmesine tıklama işlemi
        $(document).on("click", ".pagination a", function (e) {
            e.preventDefault();
            var page = $(this).attr("data-page");
            loadContestants(page);
        });

        // AJAX ile tabloyu dinamik olarak yükler
        function loadContestants(page) {
            $.ajax({
                url: '@Url.Action("GetContestants", "Judge")',
                type: 'GET',
                data: { page: page },
                success: function (result) {
                    $("#Judge").html(result); // PartialView'i tabloya yükle
                }
            });
        }
    });
</script>
