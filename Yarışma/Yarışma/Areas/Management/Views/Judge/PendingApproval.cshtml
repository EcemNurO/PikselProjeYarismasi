@model Yarışma.Areas.Management.Models.JudgeViewModel



<div class="page-content-wrapper">
    <div class="page-content">
        <div class="row">
            <div class="col-12">
                <div class="card-body">
                    <div class="card-title">
                        <h4 class="mb-0">Onay Bekleyen Hakemler</h4>
                    </div>
                    <table id="contestantTable" class="table table-striped table-bordered">
    <tr>
        <th>Ad Soyad</th>
        <th>Email</th>
        <th>Hakem Türü</th>
        <th>Kategori</th>
        <th>Onay Durumu</th>
        <th>İşlem</th>
    </tr>

    @if (Model.Judges == null || !Model.Judges.Any())
    {
        <tr>
            <td colspan="6" style="text-align: center;">Veri yok</td>
        </tr>
    }
    else
    {
        @foreach (var judge in Model.Judges)
        {
            <tr>
                <td>@judge.JudgeProfil.FullName ?? "Ad Soyad Yok"</td>
                <td>@judge.JudgeProfil.Email ?? "Email Yok"</td>
                <td>@judge.JudgeCategory?.Name ?? "Hakem Türü Yok"</td>
                <td>@judge.ProjectCategory?.Name ?? "Kategori Yok"</td>
                <td>@(judge.IsApproved ? "Onaylandı" : "Onay Bekliyor")</td>
                <td>
                    @if (!judge.IsApproved)
                    {
                        <form method="post" asp-controller="Judge" asp-action="ApproveJudge" asp-route-judgeId="@judge.Id">
                            <button type="submit">Onayla</button>
                        </form>
                    }
                </td>
            </tr>
        }
    }
</table>

            </div>
        </div>
    </div>

