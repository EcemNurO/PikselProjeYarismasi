@model Yarışma.Models.Period

<div class="page-content-wrapper">
	<div class="page-content">
		<div class="card border-top border-0 border-4 border-danger">
			<div class="card-body p-5">
				<div class="card-title d-flex align-items-center">
					<div>
						<i class="bx bxs-user me-1 font-22 text-danger"></i>
					</div>
					<h5 class="mb-0 text-danger">Yarışma Takvimi Düzenle</h5>
				</div>
				<hr>
				<form class="row g-3" method="post">
					<input type="hidden" asp-for="Id">
					<div class="col-md-6">
						<label asp-for="PeriodName" class="form-label">Dönem Adı:</label>
						<div class="input-group">
							<input type="text" class="form-control border-start-0" asp-for="PeriodName" placeholder="Kategori Adı">
							<span class="text-danger" asp-validation-for="PeriodName"></span>
						</div>
					</div>
					<div class="col-md-6">
						<label asp-for="ProjectStartDate" class="form-label">Yarışma Başlama Tarihi:</label>
						<div class="input-group">
							<input type="text" class="form-control border-start-0" asp-for="ProjectStartDate" placeholder="Kategori Adı">
							<span class="text-danger" asp-validation-for="ProjectStartDate"></span>
						</div>
					</div>
					<div class="col-md-6">
						<label asp-for="ProjectEndDate" class="form-label">Yarışma Bitiş Tarihi:</label>
						<div class="input-group">
							<input type="text" class="form-control border-start-0" asp-for="ProjectEndDate" placeholder="Yarışma Bitiş Tarihi">
							<span class="text-danger" asp-validation-for="ProjectEndDate"></span>
						</div>
					</div>
					<div class="col-md-6">
						<label asp-for="ProjectEndDate" class="form-label">Yarışma Bitiş Tarihi:</label>
						<div class="input-group">
							<input type="text" class="form-control border-start-0" asp-for="ProjectEndDate" placeholder="Yarışma Bitiş Tarihi">
							<span class="text-danger" asp-validation-for="ProjectEndDate"></span>
						</div>
					</div>
					<div class="col-12">
						<button type="submit" class="btn btn-danger px-5">Kaydet</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

