@using Azure.Core
@model Yarışma.Models.LoginUserViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Yönetim Paneli</title>
    <!--favicon-->
    <link rel="icon" href="~/assets/images/favicon-32x32.png" type="image/png" />
    <!-- loader-->
    <link href="~/assets/css/pace.min.css" rel="stylesheet" />
    <script src="~/assets/js/pace.min.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&family=Roboto&display=swap" />
    <!-- Icons CSS -->
    <link rel="stylesheet" href="~/assets/css/icons.css" />
    <!-- App CSS -->
    <link rel="stylesheet" href="~/assets/css/app.css" />
    <script src="~/assets/js/jquery.min.js"></script>
</head>

<body class="bg-login">
    <!-- wrapper -->
    <div class="wrapper" style="display: flex; align-items: center; justify-content: center; min-height: 100vh;">
        <div class="section-authentication-login mt-4" style="display: flex; width: 100%; max-width: 1000px;">
            <!-- Genel genişlik ayarlandı -->
            <div class="row w-100" style="margin: 0; display: flex; align-items: stretch; height: auto;">
                <!-- Sol taraf: Form alanı -->
                <div class="col-12 col-lg-6 p-0" style="display: flex; flex-direction: column; justify-content: center; align-items: center; padding: 20px;">
                    <div class="card radius-15 overflow-hidden" style="width: 105%; height: auto;">
                        <!-- Kart yüksekliği otomatik -->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <img src="~/assets/images/adana-haci-sabanci-organize-sanayi-bolgesi-logo-CFEB15F9B4-seeklogo.com.png" width="160"  height="80" alt=""> <!-- Logo boyutu daha küçük -->
                                <h4 class="mt-3 font-weight-bold">HOŞGELDİNİZ</h4>
                            </div>
                            <div class="login-separater text-center mb-3">
                                <span style="color: black; font-size: larger;">5.Uluslararası Sanai Odaklı İnovasyon ve Ar-Ge Yarışması</span>
                                <hr>
                            </div>

                            <div class="form-body">
                                <form class="row g-3" method="post">
                                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
                                    <div class="col-12">
                                        <label for="inputEmailAddress" class="form-label">Email Adresi</label>
                                        <input type="email" class="form-control" asp-for="Email" placeholder="Email " required>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                    <div class="col-12">
                                        <label for="inputChoosePassword" class="form-label">Şifre</label>
                                        <div class="input-group" id="show_hide_password">
                                            <input type="password" class="form-control border-end-0" asp-for="Password" placeholder="Şifre" required>
                                            <a href="javascript:;" class="input-group-text bg-transparent">
                                                <i class="bx bx-hide"></i>
                                            </a>
                                        </div>
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <div class="col-12">
                                        <p class="text-danger">@ViewBag.Message</p>
                                    </div>
                                    <div class="col-12">
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary">Giriş</button>
                                        </div>
                                    </div>
                                    <div class="col-12 text-center">
                                        <p>Henüz Kayıt Olmadınız mı?</p>
                                        <div style="display: flex; flex-direction: column; align-items: center; gap: 10px;">
                                            <button type="button" class="btn btn-primary" style="width: 200px;" onclick="window.location='@Url.Action("RegisterContestant", "Account")'">
                                                Yarışmacı Kayıt
                                            </button>
                                            <button type="button" class="btn btn-secondary" style="width: 200px;" onclick="window.location='@Url.Action("RegisterJudge", "Account")'">
                                                Hakem Kayıt
                                            </button>
                                        </div>
                                        <div style="text-align: left; margin-top: 10px;">
                                            <a asp-controller="ForgotPassword" asp-action="ForgotPassword">Şifremi Unuttum</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sağ taraf: Görsel alanı -->
                <div class="col-12 col-lg-6 p-0" style="display: flex; justify-content: center; align-items: center; padding: 20px;">
                    <img src="~/assets/images/login-images/login-frent-img.jpg" style="width: 100%; max-width: 475px; height: auto; object-fit: contain; border-radius: 10px;" alt="..."> <!-- Görsel boyutu optimize edildi -->
                </div>
            </div>
        </div>
    </div>


    <!-- end wrapper -->

    <script>
        // Şifre göster/gizle fonksiyonu
        $(document).ready(function () {
            $("#show_hide_password a").on('click', function (event) {
                event.preventDefault();
                if ($('#show_hide_password input').attr("type") == "text") {
                    $('#show_hide_password input').attr('type', 'password');
                    $('#show_hide_password i').addClass("bx-hide");
                    $('#show_hide_password i').removeClass("bx-show");
                } else if ($('#show_hide_password input').attr("type") == "password") {
                    $('#show_hide_password input').attr('type', 'text');
                    $('#show_hide_password i').removeClass("bx-hide");
                    $('#show_hide_password i').addClass("bx-show");
                }
            });
        });
    </script>
</body>

</html>
