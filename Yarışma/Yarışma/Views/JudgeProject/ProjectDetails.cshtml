@model ProjectEvaluationViewModel
<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-content">
<h2>Proje Detayları</h2>

<p><strong>Puan:</strong> @Model.Score</p>
<p><strong>Yorum:</strong> @Model.Comments</p>

<h3>Sorular ve Cevaplar</h3>
@if (Model.ProjectAnswers != null && Model.ProjectAnswers.Any())
{
    <table>
        <thead>
            <tr>
                <th>Soru</th>
                <th>Cevap</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var qa in Model.ProjectAnswers)
            {
                <tr>
                    <td>@qa.Question</td>
                    <td>@qa.Answer</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Henüz sorular ve cevaplar bulunmamaktadır.</p>
}
</div>
</div>
</div>